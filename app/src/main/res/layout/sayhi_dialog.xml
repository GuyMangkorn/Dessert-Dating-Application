<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCorner"

    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/View24dp"
    android:paddingRight="@dimen/View24dp"
    android:paddingTop="@dimen/View16dp"
    android:paddingBottom="@dimen/View16dp"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_hi"
        android:textColor="@color/c3"
        android:textSize="@dimen/Text20sp"
        android:layout_gravity="start"
        />


    <EditText
        android:id="@+id/text_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Text16sp"
        android:hint="@string/Send_a_message_to"
        />
    <Button
        android:background="@color/float_transparent"
        android:layout_marginTop="@dimen/View16dp"
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message"
        android:layout_gravity="end"
        android:textColor="@color/c3"
        android:padding="0dp"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>